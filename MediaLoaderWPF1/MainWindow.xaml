<Window x:Class="MediaLoaderWPF1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar" 
        xmlns:local="clr-namespace:MediaLoaderWPF1"
        mc:Ignorable="d"
        Title="Home Theater TV" Height="347.058" Width="480" MinWidth="520" MaxWidth="520">

    <Window.Resources>
        <Style x:Key="TransparentStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border>
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#22000000"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid Background="Transparent">
                                <ContentPresenter></ContentPresenter>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Resources>
            <local:ShowAppCommand x:Key="MessageCommand" />
        </Grid.Resources>
        <!--        <tb:TaskbarIcon x:Name="TrayIcon" -->
        <!--            ToolTipText="PC-Sync" -->
        <!--                        LeftClickCommand="{StaticResource MessageCommand}"/>-->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="directoriesPanel" Margin="0,35,0,0" Orientation="Vertical"/>
        </ScrollViewer>
        
        <Grid x:Name="headerGrid" Height="35" VerticalAlignment="Top" Background="#6699cc">
            <Label x:Name="label" Content="Video Directories" Margin="10,4,205,0" VerticalAlignment="Top" Foreground="White"/>
            <Grid>
                <Button Style="{StaticResource TransparentStyle}" x:Name="addDirectoryButton" Margin="0,0,17,0" Click="addDirectoryButton_Click" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="35" Background="{x:Null}" BorderThickness="1" BorderBrush="{x:Null}">
                    <StackPanel >
                        <Image Source="Resources/ic_add_white_24dp_1x.png" Height="33" Width="20" Margin="5,0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
            
        <Label x:Name="AddFoldersLabel" Content="Add folders with videos you want to stream to your Android TV" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="-0.474,-0.462"/>

    </Grid>
   

</Window>
