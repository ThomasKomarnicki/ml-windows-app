<UserControl x:Class="MediaLoaderWPF1.DirectoryRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaLoaderWPF1"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="491">
    <Grid>
        <Label x:Name="directoryPath" Content="Directory Path Goes Here" HorizontalAlignment="Left" Margin="0,6" Width="345"/>
        <CheckBox x:Name="includeSubDirs" Content="" HorizontalAlignment="Left" Margin="345,13,0,0" VerticalAlignment="Top" Height="16" Width="18" RenderTransformOrigin="0.611,1.688" Checked="includeSubDirs_Checked" Unchecked="includeSubDirs_Checked"/>
        <Button x:Name="deleteButton" Content="Del" HorizontalAlignment="Left" Margin="437,10,0,0" VerticalAlignment="Top" Width="32" Click="deleteButton_Click"/>

    </Grid>
</UserControl>
