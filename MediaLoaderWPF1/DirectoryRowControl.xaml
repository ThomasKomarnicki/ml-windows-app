<UserControl x:Class="MediaLoaderWPF1.DirectoryRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaLoaderWPF1"
             mc:Ignorable="d" 
             d:DesignHeight="40" MinWidth="520" MaxWidth="520">
    <Grid>
        <Label x:Name="directoryPath" Content="Directory Path Goes Here" Margin="0,6,165,6" Panel.ZIndex="1" HorizontalAlignment="Left"/>
        <Grid Height="40" Margin="0,0,1,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="185">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="11*"/>
            </Grid.RowDefinitions>
            <Button x:Name="deleteButton" Margin="0,7,33,0" VerticalAlignment="Top" Click="deleteButton_Click" Grid.RowSpan="2" HorizontalAlignment="Right" Width="28" RenderTransformOrigin="-0.071,0.65" Background="{x:Null}" BorderBrush="{x:Null}">
                <StackPanel>
                    <Image Source="Resources/ic_remove_black_24dp_1x.png" Height="22" Width="26"/>
                </StackPanel>
            </Button>
        </Grid>

    </Grid>
</UserControl>
